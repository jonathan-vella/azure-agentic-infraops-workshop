{
  "name": "Agentic InfraOps",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "installBicep": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13",
      "installTools": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // Lifecycle commands - use object format for parallel execution where possible
  "onCreateCommand": {
    "apt-packages": "sudo apt-get update && sudo apt-get install -y graphviz dos2unix",
    "install-uv": "curl -LsSf https://astral.sh/uv/install.sh | sh"
  },
  "postCreateCommand": {
    "npm-install": "npm install",
    "npm-global": "npm install -g markdownlint-cli2",
    "post-create": "bash .devcontainer/post-create.sh"
  },
  "postStartCommand": {
    "lefthook": "npx lefthook install 2>/dev/null || true"
  },

  // Environment variables for Python optimization
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "UV_CACHE_DIR": "/home/vscode/.cache/uv"
  },

  "remoteEnv": {
    "AZURE_DEFAULTS_LOCATION": "swedencentral"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-azuretools.vscode-bicep",
        "ms-vscode.powershell",
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "davidanson.vscode-markdownlint",
        "ms-vscode.copilot-mermaid-diagram",
        "ms-vscode.azurecli",
        "ms-azuretools.vscode-azurecontainerapps",
        "ms-azuretools.vscode-azurestaticwebapps",
        "ms-azuretools.azure-dev",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-kubernetes-tools.vscode-aks-tools",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-azure-github-copilot",
        "ms-vscode.vscode-websearchforcopilot",
        "teamsdevapp.vscode-ai-foundry",
        "esbenp.prettier-vscode",
        "mechatroner.rainbow-csv",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.rulers": [120],
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 120,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n",
        "editor.tabSize": 2,
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.rulers": [120],
          "editor.wordWrap": "wordWrapColumn",
          "editor.wordWrapColumn": 120
        },
        "[bicep]": {
          "editor.tabSize": 2
        },
        "[powershell]": {
          "editor.tabSize": 4
        },
        "[python]": {
          "editor.tabSize": 4
        },
        "python.analysis.typeCheckingMode": "basic",
        "markdownlint.config": {
          "extends": "${workspaceFolder}/.markdownlint-cli2.jsonc"
        },
        "markdownlint.run": "onSave"
      }
    }
  },

  "mounts": [
    {
      "source": "${localEnv:USERPROFILE}${localEnv:HOME}/.azure",
      "target": "/home/vscode/.azure",
      "type": "bind"
    },
    {
      "source": "devcontainer-uv-cache-${devcontainerId}",
      "target": "/home/vscode/.cache/uv",
      "type": "volume"
    }
  ],

  "remoteUser": "vscode"
}
